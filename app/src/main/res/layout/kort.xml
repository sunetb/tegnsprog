<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/kort">


    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/afspillerview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <CheckBox
            android:id="@+id/loopcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/looptv"
            app:layout_constraintTop_toBottomOf="@+id/afspillerview"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/looptv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Loop"
            app:layout_constraintBottom_toBottomOf="@+id/loopcb"
            app:layout_constraintEnd_toStartOf="@+id/langsomcb"
            android:layout_marginRight="8dp" />

        <CheckBox
            android:id="@+id/langsomcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/looptv"
            app:layout_constraintEnd_toStartOf="@+id/langsomtv"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/langsomtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Langsom"
            app:layout_constraintBottom_toBottomOf="@+id/langsomcb"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" />


        <TextView
            android:id="@+id/fundtekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fadeScrollbars="false"
            android:text="fund"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/afspillerview"
            app:layout_constraintVertical_bias="0.466">

        </TextView>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>